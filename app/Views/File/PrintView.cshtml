@{
    Layout = null;
    var filename = ViewBag.Filename;
    var mimeType = ViewBag.MimeType;
    var filePath = ViewBag.FilePath;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Print: @filename</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        
        .print-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
            margin-bottom: 20px;
        }
        
        .print-header h1 {
            font-size: 20px;
            margin: 0;
        }
        
        .print-header .print-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }
        
        .print-header .print-btn:hover {
            background-color: #0069d9;
        }
        
        .content-container {
            padding: 20px;
            max-width: 100%;
            overflow: auto;
        }
        
        iframe {
            width: 100%;
            height: 80vh;
            border: 1px solid #ddd;
        }
        
        img {
            max-width: 100%;
            height: auto;
        }
        
        @@media print {
            .print-header {
                display: none;
            }
            
            .content-container {
                padding: 0;
            }
            
            iframe {
                height: 100%;
                border: none;
            }
        }
    </style>
</head>
<body>
    <div class="print-header">
        <h1>Print: @filename</h1>
        <button class="print-btn" onclick="window.print()">Print Now</button>
    </div>
    
    <div class="content-container">
        @if (mimeType.StartsWith("image"))
        {
            <img src="@filePath" alt="@filename" />
        }
        else if (mimeType.StartsWith("text") || mimeType == "application/pdf")
        {
            <iframe src="@filePath" title="@filename"></iframe>
        }
        else
        {
            <p>This file type may not display correctly in the browser. Click Print Now to proceed with printing.</p>
            <iframe src="@filePath" title="@filename"></iframe>
        }
    </div>

    <script>
        // Automatically open print dialog after the content loads
        window.onload = function() {
            // Brief delay to ensure content is loaded
            setTimeout(function() {
                window.print();
            }, 1000);
        };
    </script>
</body>
</html>