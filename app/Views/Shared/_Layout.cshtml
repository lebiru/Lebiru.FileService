<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lebiru.FileServer</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="icon" href="@Url.Content("~/images/favicon.ico")" />
    <style>
        /* Hide scrollbar for Chrome, Safari and Opera */
        ::-webkit-scrollbar {
            display: none;
        }

        /* Hide scrollbar for IE, Edge and Firefox */
        html {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;     /* Firefox */
        }

        .footer-container {
            margin-top: 10px;
        }

        .footer-bottom {
            margin: 0px 0px 50px 0px;
        }

        /* Sidebar styles */
        .sidebar {
            width: 200px;
            height: 100vh;
            position: fixed;
            top: 56px; /* Navbar height */
            left: 0;
            background-color: #f7f7f7;
            color: #333;
            overflow: hidden;
            z-index: 100;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            bottom: 0;
        }

        .sidebar.expanded {
            width: 200px;
        }

        .sidebar-header {
            padding: 15px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar-toggle {
            cursor: pointer;
            font-size: 24px;
            color: #007bff;
            background-color: rgba(0, 0, 0, 0.05);
            padding: 8px;
            border-radius: 50%;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.2);
        }

        .sidebar-content {
            padding: 15px 0;
        }

        .sidebar-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: #333;
            text-decoration: none;
            transition: background-color 0.2s;
            white-space: nowrap;
        }

        .sidebar-item:hover {
            background-color: rgba(0, 0, 0, 0.05); /* Subtle dark hover */
            color: #007bff; /* Bootstrap primary blue */
            text-decoration: none;
        }

        .sidebar-item i {
            font-size: 18px;
            width: 30px;
            text-align: center;
        }

        .sidebar-text {
            margin-left: 10px;
            opacity: 1;
        }

        .main-content {
            margin-left: 200px;
            width: calc(100% - 200px);
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .main-content > * {
            width: 100%;
            max-width: 100%;
        }
        
        /* All pages use full width */
        .main-content > * {
            max-width: 100%;
        }

        /* Shine effect for toggle */
        @@keyframes shine {
            0% {
                background-position: -100px;
            }
            20% {
                background-position: 200px;
            }
            100% {
                background-position: 200px;
            }
        }

        .sidebar-toggle.shine {
            position: relative;
            overflow: hidden;
        }

        .sidebar-toggle.shine::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,0.3) 50%, rgba(255,255,255,0) 100%);
            background-size: 100px 100%;
            transform: rotate(45deg);
            animation: shine 1s ease-in-out;
            pointer-events: none;
        }

        /* Dark mode support for sidebar */
        body.dark-mode .sidebar {
            background-color: #222;
            color: #f7f7f7;
            border-right: 1px solid #333;
        }
        
        body.dark-mode .sidebar-item {
            color: #f7f7f7;
        }

        body.dark-mode .sidebar-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #00ffff;
        }
        
        /* Dark mode support for navbar */
        body.dark-mode .navbar {
            background-color: #222 !important;
        }
        
        body.dark-mode .navbar-light .navbar-brand,
        body.dark-mode .navbar-light .navbar-nav .nav-link {
            color: #f7f7f7;
        }

    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="@(ViewContext.RouteData.Values["action"]?.ToString()?.ToLower() == "index" ? "page-home" : "") @(ViewContext.RouteData.Values["action"]?.ToString()?.ToLower() == "swagger" || Context.Request.Path.Value?.ToLower().Contains("swagger") == true ? "page-swagger" : "")">
    <header style="position: sticky; top: 0; z-index: 1020;">
        <nav class="navbar navbar-expand-md navbar-light" style="background-color: #f7f7f7;">
            <div class="container-fluid">
                <a class="navbar-brand mr-auto" href="/File/Home">Lebiru.FileServer</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/File/Swagger">Swagger</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/healthz">HealthCheck</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/hangfire">Hangfire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Config/View">ConfigView</a>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">
                                <i class="fas fa-user"></i> @User.Identity?.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <div id="sidebar" class="sidebar">
            <div class="sidebar-content">
                <a href="/File/Home" class="sidebar-item">
                    <i class="fas fa-home"></i>
                    <span class="sidebar-text">Home</span>
                </a>
                <a href="/File/Upload" class="sidebar-item">
                    <i class="fas fa-upload"></i>
                    <span class="sidebar-text">Upload File</span>
                </a>
            </div>
            <!-- Sidebar toggle removed as sidebar is now permanently expanded -->
        </div>

        <!-- Main Content -->
        <div class="container main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted footer-bottom" style="background-color: #ffffff;">
        <div class="container footer-container py-3 my-3">
            &copy; @DateTime.Now.Year - Lebiru.FileServer Version: @ViewContext.HttpContext.Items["Version"] (@ViewContext.HttpContext.Items["GitCommit"])
        </div>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.43/moment-timezone-with-data.min.js"></script>
    
    <script>
        // Sidebar is now permanently expanded, no toggle functionality needed
        // This script is kept as a placeholder in case we need to add sidebar functionality in the future
        document.addEventListener('DOMContentLoaded', () => {
            // Sidebar is permanently expanded
        });
    </script>
</body>
</html>